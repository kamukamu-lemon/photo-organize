<main>
<%= form_with  model: @user, url: user_session_path, id: 'new_user', class: 'sessions-main', local: true do |f| %>
 <%= flash[:notice] %>
 <%= flash[:alert] %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,placeholder:"PC・携帯どちらでも可", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"input-default", placeholder:"" %>
  </div>

  <div class="login-btn">
    <%= f.submit "LOG IN" ,class:"black-btn"%>
  </div>
<% end %>
 
   <%= link_to "NEW", new_user_registration_path, class: "white-btn" %>
  </div>
</main>



