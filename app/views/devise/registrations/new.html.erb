<main>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, placeholder:"例) sampleサンプル", maxlength:"40", autofocus: true, autocomplete: "nickname" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="field"><br />
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class='register-btn'>
    <%= f.submit "REGISTER" ,class:"black-btn" %>
  </div>
<% end %>

   <%= link_to "BACK", unauthenticated_root_path, class: "white-btn" %>
 
