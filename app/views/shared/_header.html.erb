<header class="header">
   <div class="header-title">
     <% if controller.action_name == 'index' %>
        Photo Organize
   <% else %>
   <%= link_to 'Photo Organize', authenticated_root_path, class: 'title-link' %>
  <% end %>
   </div>
  <% if user_signed_in? %>
    <div class="header-user">
      <span class="username"><%= current_user.nickname %></span>
      <%= link_to 'Log out', destroy_user_session_path, data: {turbo_method: :delete}, class: 'logout-button' %>
    </div>
  <% end %>
</header>
